{
  "name": "js-module-boilerplate",
  "version": "0.1.1",
  "description": "JS Module Boilerplate",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean:dist && babel lib -d dist",
    "clean": "npm run clean:dist && npm run clean:coverage",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "coverage": "npm run clean:coverage && babel-node node_modules/.bin/isparta cover --report lcov --report text --report html test/index.js",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "dev": "nodemon -w lib -w test --exec \"npm run -s lint && npm run -s test:dev\"",
    "lint": "eslint lib",
    "prepublish": "npm run build",
    "postinstall": "npm run build",
    "test": "babel-node test/index.js",
    "test:dev": "npm run -s test | tap-spec"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nathanmarks/js-module-boilerplate.git"
  },
  "keywords": [],
  "author": "Nathan Marks <info@nathanmarks.io> (http://nathanmarks.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nathanmarks/js-module-boilerplate/issues"
  },
  "homepage": "https://github.com/nathanmarks/js-module-boilerplate#readme",
  "devDependencies": {
    "app-module-path": "^1.0.5",
    "babel-cli": "^6.4.0",
    "babel-eslint": "^5.0.0-beta6",
    "coveralls": "^2.11.6",
    "doctoc": "^0.15.0",
    "eslint": "^1.10.3",
    "isparta": "^4.0.0",
    "nodemon": "^1.8.1",
    "rimraf": "^2.5.0",
    "tap-spec": "^4.1.1",
    "tap-xunit": "^1.3.1",
    "tape": "^4.4.0"
  },
  "dependencies": {
    "babel-plugin-transform-runtime": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-runtime": "^6.3.19"
  }
}
